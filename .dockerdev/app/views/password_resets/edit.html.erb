<h1><%= t'Reset password' %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", :target => @user  %>

      <%= hidden_field_tag :email, @user.email %>

      <p><%= f.label :password %></p>
      <p><%= f.password_field :password, class: 'form-control' %></p>	
      <p><label> <%= t'Confirmation' %></label></p>
      <p><%= f.password_field :password_confirmation, class: 'form-control' %></p>
      <p>
       <%= f.submit t'Update password', class: "btn btn-primary" %>
       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
       <%= link_to(t('Cancel'), root_url) %>
      </p>
    <% end %>
  </div>
</div>
