
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1><%= t('Please') + t('Login') %></h1>
	<%= form_tag :action => 'login' do %>
	        <p><label><%= t'Username' %></label></p>
	        <p><%= text_field_tag :login %></p>
		<p>
	          <label><%= t'password' %></label>
		  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
		  <%= link_to(t('forgot password'),  new_password_reset_path) %>
		</p>
		<p>
		  <%= password_field_tag :password %>
		</p>		
		<p>                
		  <%= check_box_tag :remember_me %>
		  <span><lable><%= t'Remember me on this computer' %></label></span>
		</p>
		<p>
		  <%= submit_tag t('Login'), :id=>'submit_button',:onclick=>'submit();'  %>
		</p>
	<% end %> 
        <p>
          <%= t'New user?'%> <%= link_to(t('Sign up!'), signup_url) %>
        </p>
      </div>
    </div>
    <style type="text/css">
      .col-md-6{
	  text-align: center;
      }	
    </style> 
