<% if target.errors.any? %>
<div class="error_explanation">
  <h2><%= pluralize(target.errors.count, I18n.t('error')) %> <%= I18n.t('prevented this record from being saved:') %></h2>
  <ul>
  <% target.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
